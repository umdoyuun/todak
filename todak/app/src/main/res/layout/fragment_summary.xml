<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 헤더 섹션 -->
        <TextView
            android:id="@+id/tv_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 하루 돌아보기"
            android:textColor="@color/brown"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 인사말 -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_title"
            tools:text="안녕하세요, 전상혁님!" />

        <!-- 하루 요약 -->
        <TextView
            android:id="@+id/tv_daily_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting"
            tools:text="오늘 하루 동안 전상혁님은 활발하게 활동하셨어요. 총 13개의 루틴 중 8개를 성공적으로 수행하셨고, 30개의 일정 중 5개를 완료하셨네요. 또한 참여하신 2개의 미션을 모두 완료하셨어요. 정말 대단하십니다!" />

        <!-- 성취 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_daily_summary" />

        <!-- 루틴 하이라이트 섹션 -->
        <ImageView
            android:id="@+id/routine_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_time"
            app:layout_constraintBottom_toBottomOf="@+id/tv_routine_highlights_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_routine_highlights_title"
            app:layout_constraintTop_toTopOf="@+id/tv_routine_highlights_title" />

        <TextView
            android:id="@+id/tv_routine_highlights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="루틴 하이라이트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/routine_icon"
            app:layout_constraintTop_toBottomOf="@id/rv_achievements" />

        <TextView
            android:id="@+id/tv_routine_highlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_routine_highlights_title"
            tools:text="오늘 전상혁님의 루틴 수행은 정말 인상적이었어요. 특히 아침 루틴을 50% 완료하신 것은 아주 멋진 성취입니다!" />

        <!-- 루틴 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_routine_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_routine_highlights" />

        <!-- 일정 하이라이트 섹션 -->
        <ImageView
            android:id="@+id/schedule_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_schedule"
            app:layout_constraintBottom_toBottomOf="@+id/tv_schedule_highlights_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_schedule_highlights_title"
            app:layout_constraintTop_toTopOf="@+id/tv_schedule_highlights_title" />

        <TextView
            android:id="@+id/tv_schedule_highlights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="일정 하이라이트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/rv_routine_items"
            app:layout_constraintStart_toEndOf="@id/schedule_icon"
            />

        <TextView
            android:id="@+id/tv_schedule_highlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_schedule_highlights_title"
            tools:text="전상혁님의 일정 관리 능력에 감탄합니다. 오늘 하루 동안 30개의 일정 중 5개를 완료하셨네요. 계속해서 이런 훌륭한 일정 관리를 유지해 보세요!" />

        <!-- 일정 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_schedule_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_schedule_highlights" />

        <!-- 미션 하이라이트 섹션 -->
        <ImageView
            android:id="@+id/mission_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_mission"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mission_highlights_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_mission_highlights_title"
            app:layout_constraintTop_toTopOf="@+id/tv_mission_highlights_title" />

        <TextView
            android:id="@+id/tv_mission_highlights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="미션 하이라이트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/mission_icon"
            app:layout_constraintTop_toBottomOf="@id/rv_schedule_items" />

        <TextView
            android:id="@+id/tv_mission_highlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_mission_highlights_title"
            tools:text="'아자아자'와 '밥 같이 먹기' 미션을 100% 완료하신 것은 정말 대단한 성과입니다. 이런 미션 완료는 자신감을 높이고, 생활에 활력을 불어넣어줍니다." />

        <!-- 미션 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mission_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mission_highlights" />

        <!-- 감정 인사이트 섹션 -->
        <ImageView
            android:id="@+id/emotion_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_emoji"
            app:layout_constraintBottom_toBottomOf="@+id/tv_emotional_insights_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_emotional_insights_title"
            app:layout_constraintTop_toTopOf="@+id/tv_emotional_insights_title" />

        <TextView
            android:id="@+id/tv_emotional_insights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="감정 인사이트"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/emotion_icon"
            app:layout_constraintTop_toBottomOf="@id/rv_mission_items" />

        <TextView
            android:id="@+id/tv_emotional_insights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_emotional_insights_title"
            tools:text="오늘의 감정 상태를 살펴보니, 전상혁님은 주로 중립적인 감정 상태를 느꼈네요. 그리고 기쁨을 느낀 횟수도 있었습니다. 감정은 우리의 일상에서 중요한 부분이므로, 감정 상태를 기록하고 이해하는 것에 축하를 드립니다!" />

        <!-- 감정 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_emotion_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_emotional_insights" />

        <!-- 내일을 위한 팁 섹션 -->
        <ImageView
            android:id="@+id/tip_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_lightbulb"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tomorrow_tips_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_tomorrow_tips_title"
            app:layout_constraintTop_toTopOf="@+id/tv_tomorrow_tips_title" />

        <TextView
            android:id="@+id/tv_tomorrow_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="내일을 위한 팁"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tip_icon"
            app:layout_constraintTop_toBottomOf="@id/rv_emotion_items" />

        <!-- 팁 아이템 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tomorrow_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tomorrow_tips_title" />

        <!-- 마무리 메시지 -->
        <TextView
            android:id="@+id/tv_closing_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_tomorrow_tips"
            tools:text="오늘도 전상혁님의 노력에 경의를 표합니다! 활발한 활동과 끊임없는 성장을 위해 노력하신 것이 정말 멋집니다. 내일도 기대하시는 바를 이루실 수 있도록 응원하겠습니다." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>